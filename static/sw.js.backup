const CACHE_NAME = 'stock-pwa-v1';
const IMAGE_CACHE_NAME = 'images-v1'; // ì´ë¯¸ì§€ ì „ìš© ìºì‹œ

const STATIC_FILES = [
  '/',
  '/manifest.json'
];

self.addEventListener('install', (event) => {
  console.log('Service Worker ì„¤ì¹˜ ì¤‘...');
  event.waitUntil(
    caches.open(CACHE_NAME).then(cache => {
      return cache.addAll(STATIC_FILES);
    })
  );
  self.skipWaiting();
});

self.addEventListener('activate', (event) => {
  console.log('Service Worker í™œì„±í™”ë¨');
  event.waitUntil(
    Promise.all([
      caches.keys().then(cacheNames => {
        return Promise.all(
          cacheNames.map(cacheName => {
            if (cacheName !== CACHE_NAME && cacheName !== IMAGE_CACHE_NAME) {
              return caches.delete(cacheName);
            }
          })
        );
      }),
      self.clients.claim()
    ])
  );
});

self.addEventListener('fetch', (event) => {
  const { request } = event;
  const url = new URL(request.url);
  
  // SvelteKit íŽ˜ì´ì§€ëŠ” ê±´ë“œë¦¬ì§€ ì•ŠìŒ
  if (request.destination === 'document') {
    return;
  }
  
  // ðŸ–¼ï¸ ì´ë¯¸ì§€ ìºì‹± ê°•í™” (ìƒˆë¡œ ì¶”ê°€)
  if (request.destination === 'image') {
    event.respondWith(
      caches.open(IMAGE_CACHE_NAME).then(cache => {
        return cache.match(request).then(response => {
          if (response) {
            console.log('ðŸ–¼ï¸ ì´ë¯¸ì§€ ìºì‹œì—ì„œ ì œê³µ:', url.pathname);
            return response;
          }
          
          return fetch(request).then(fetchResponse => {
            // ì´ë¯¸ì§€ ìš”ì²­ ì„±ê³µ ì‹œì—ë§Œ ìºì‹œ ì €ìž¥
            if (fetchResponse && fetchResponse.ok) {
              console.log('ðŸ–¼ï¸ ìƒˆ ì´ë¯¸ì§€ ìºì‹œ ì €ìž¥:', url.pathname);
              cache.put(request, fetchResponse.clone());
            }
            return fetchResponse;
          });
        });
      })
    );
    return;
  }
  
  // ê¸°ì¡´ ì •ì  íŒŒì¼ ìºì‹± (ê·¸ëŒ€ë¡œ ìœ ì§€)
  if (request.destination === 'script' || request.destination === 'style') {
    event.respondWith(
      caches.match(request).then(response => {
        return response || fetch(request);
      })
    );
  } else {
    event.respondWith(fetch(request));
  }
});